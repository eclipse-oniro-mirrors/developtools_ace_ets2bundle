{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["ESNext", "ESNext.WeakRef", "DOM"],
        "moduleResolution": "node",
        "composite": true,
        "incremental": true,
        "declarationMap": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": false,
        "outDir": "build",
        "baseUrl": ".",
        "rootDir": ".",
        "module": "CommonJS"
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "./src/ts-api/**/*.ts",
        "./koalaui"
    ]
}
