{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["ESNext", "ESNext.WeakRef", "DOM"],
        "module": "CommonJS",
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./lib",
        "moduleResolution": "node",
        "incremental": false,
        "declarationMap": false,
        "sourceMap": false,
        "declaration": false,
        "noEmitOnError": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": false
    },
    "include": [
        "./common/**/*.ts",
        "./memo-plugins/**/*.ts",
        "./ui-plugins/**/*.ts",
        "./interop-plugins/**/*.ts",
    ],
    "exclude": [
        "./test/**"
    ]
}
