{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["ESNext", "ESNext.WeakRef", "DOM"],
        "module": "esnext",
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./lib",
        "moduleResolution": "node",
        "composite": true,
        "incremental": true,
        "declarationMap": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": false,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": [
        "./collectors/**/*.ts",
        "./common/**/*.ts",
        "./memo-plugins/**/*.ts",
        "./ui-plugins/**/*.ts",
        "./ui-syntax-plugins/**/*.ts",
        "./interop-plugins/**/*.ts",
        "./path.ts",
        "./test/ut/**/*.ts",
        "./test/utils/**/*.ts"
    ],
    "exclude": [
        "./test/demo/",
        "./test/local/"
    ]
}
